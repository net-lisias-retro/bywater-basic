1	Rem This is READFILE.BAS used to read name,date,formats and tabs.


%INCLUDE ALL.BAS
1000	DIM T%(20),A(16),D$(8),N(2,2),DATE1$(8)
	PRINT CLEAR$
	REM GET DATES
	PRINT:PRINT "LOADING DATES"
	OPEN "DATE" AS 1
	READ#1;N$
	CLOSE 1
	Z9=1
	FOR Z=1 TO 8
	D$(Z)=MID$(N$,Z9,8)
	DATE1$(Z)=D$(Z)
	Z9=Z9+8
	NEXT Z
	Z9=0
	REM READ FORMAT STRINGS FOR % AND VALUES
	PRINT:PRINT "LOADING FORMATS"
	OPEN "GLF" AS 1
	READ#1;LLL$,PPP$
	CLOSE 1
	REM READ TAB VALUE
	PRINT:PRINT "LOADING TABS"
	OPEN "GLT" AS 1
	READ#1;T%(1),T%(2),T%(3),T%(4),T%(5),T%(6),T%(7),T%(8),T%(9),T%(10),T%(11),T%(12),A(13),A(14),A(15),A(16)
	CLOSE 1
	REM READ NAME FILE
	A5=T%(12)
	PRINT:PRINT "LOADING NAMES"
	OPEN "NM" RECL 170 AS 1
	Z3=(SIZE("NM")*BLOCK.SIZE)/170
	FOR Z2=1 TO Z3
	READ#1,Z2;N(2,1),N(2,2),N$
	IF N(2,1)=A5 THEN 1100
	NEXT Z2
1100	CLOSE 1
	CO.NAME$=N$
	BIZMII.FLAG=1
	CHAIN "BIZMII"
