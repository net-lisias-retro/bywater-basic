   40 REM     DATE: 2017-01-10
   50 REM     NOTE: OPTION VERSION BYWATER
   60 REM     NOTE: OPTION ENABLE COMMAAND "BASIC"
   70 REM
   80 REM
   90 REM -------------------------------------
  100 ON ERROR GOTO 8000
  200 LINE INPUT "COMMAND (LINE NUMBER 1000 TO 1999):", A$
  210 A$ = TRIM$(A$)
  220 IF LEN(A$) = 0 THEN 200
  230 IF A$ = "BYE" GOTO 9999
  240 IF A$ = "END" GOTO 9999
  250 IF A$ = "QUIT" GOTO 9999
  260 LET L = VAL(A$)
  270 IF L < 1000 GOTO 200
  280 IF L > 1999 GOTO 200
  290 BASIC A$
  300 LIST 1000-1999
  999 REM -------------------------------------
 2000 REM -------------------------------------
 2010 GOTO 200
 8000 PRINT "ERROR IN LINE";ERL;": ";ERR$
 8010 RESUME NEXT
 9999 END
